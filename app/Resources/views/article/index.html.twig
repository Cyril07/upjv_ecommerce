{% extends 'BackendBundle:Layout:backend.html.twig' %}

{% block body %}

<style>
  .current{
    color: #083b72;
  }
</style>

<div class="col-lg-10">

    <h1>Produits</h1>

    <a href="{{ path('article_new') }}"><button type="button" class="btn btn-default">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span><b> Ajouter un produit</b>
    </button></a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Référence</th>
                <th>Désignation</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}

            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.reference }}</td>
                <td>{{ article.wording }}</td>
                <td>{{ article.stock }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.price }}</td>
                <td>
                    <a href="{{ path('article_show', { 'id': article.id }) }}"><button type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button></a>

                    <a href="{{ path('article_edit', { 'id': article.id }) }}"><button type="button" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>

                    <a href="{{ path('unabled_article', { 'id': article.id }) }}"><button type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></a>
                </td>
            </tr>
            
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation text-center">
        {{ knp_pagination_render(articles) }}
    </div>
    
</div>

{% block javascript %}
<script>

</script>
{% endblock %}


{% endblock %}
